@model Forums

@{
    ViewData["TITLE"] = "Forum Page";
}

<div class="jumbotron">
    <h1 class="display-4 text-center">Community Forum</h1><br />
</div>
    <div class="container">
        <form method="post">
            <div class="row">
                <label class="control-label col-sm-3 ml-5" asp-for="PostTopic">Post Topic </label><br />
                <input class="form-control col-sm-6" asp-for="PostTopic" placeholder="Topic" /><br />
            </div>
            <div class="row">
                <label class="control-label col-sm-3 ml-5" asp-for="PostText">Comments</label><br />
                <input class="form-control col-sm-6" asp-for="PostText" placeholder="Write comments..." /><br />
            </div>
            <div class="row">
                <label class="control-label col-sm-3 ml-5" asp-for="UserName.UserName">User Name</label><br />
                <input class="form-control col-sm-6" asp-for="UserName.UserName" placeholder="Username" /><br />
            </div>
            <div class="row">
                <label class="control-label col-sm-3 ml-5" asp-for="PostRating">Rating</label><br />
                <input class="form-control col-sm-6" asp-for="PostRating" placeholder="Rate this post" /><br />
            </div>

            <!--<label>Date</label><br />
            <input asp-for="Date" /><br /><br />-->

            <br />
            <div class="row d-flex justify-content-center">
                <button class="btn btn-primary ml-5 p-2" type="submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>


<div">
    <h1>Forum Posts</h1>
    @if (Model != null)
    {
        <strong>Post Topic</strong><br />
        @Model.PostTopic<br />
        <strong>Post</strong><br />
        @Model.PostText<br />
        <strong>User Name</strong><br />
        @Model.UserName.UserName<br />
        <strong>Post Rating</strong><br />
        @Model.PostRating<br />
        <strong>Date</strong><br />
        @Model.Date
    }
</div>
