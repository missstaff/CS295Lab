@{
    ViewData["TITLE"] = "Forum Page";
}

<div class="text-center">
    <h1 class="display-4">Community Forum</h1><br />
    
    <form method="post">
        <label>Post Topic</label><br />
        <input asp-for="PostTopic" /><br />
        <label>Enter Post</label><br />
        <input asp-for="PostText" /><br />
        <label>User Name</label><br />
        <input asp-for="UserName.UserName" /><br />
        <label>Rating</label><br />
        <input asp-for="PostRating" /><br />
        <label>Date</label><br />
        <input asp-for="Date" /><br /><br />
        <button type="submit" value="submit">Submit</button>
    </form>
</div>

    <h1>Forum Posts</h1>
    <div>
        Post Topic:
        @Model.PostTopic;
        Post:
        @Model.PostText;
        User Name:
        @Model.UserName.UserName;
        Post Rating:
        @Model.PostRating;
        Date:
        @Model.Date;
    </div>
