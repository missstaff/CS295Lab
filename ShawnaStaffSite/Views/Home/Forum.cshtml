@model ForumPosts
@{
    ViewData["TITLE"] = "Forum Page";
}

<div class="jumbotron">
    <h1 class="display-4 text-center">Community Forum</h1><br />
</div>

<div class="container">
    <form method="post">
        <!--<div asp-validation-summary="All"></div>-->
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="PostTopic">Post Topic </label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="PostTopic" placeholder="Topic" /><br />
        </div>
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="PostText">Comments</label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="PostText" placeholder="Write comments..." /><br />
        </div>
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="UserName.UserName">User Name</label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="UserName.UserName" placeholder="Username" /><br />
        </div>
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="PostRating">Rating</label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="PostRating" placeholder="Rate this post" /><br />
        </div>
        <div class="row justify-content-center ml-5">
            <button class="btn btn-primary p-2" type="submit" value="submit">Submit</button>
        </div>
    </form>
    <div>
        </div>